{
  "compilerOptions": {
    "composite": true,
    "target": "es2017",
    "baseUrl": "./",
    "rootDir": "source",
    "outDir": "lib",
    "module": "commonjs",
    "lib": ["es5", "esnext"],
    "declaration": true,
    "declarationMap": true,
    "removeComments": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noImplicitReturns": true,
    "moduleResolution": "node",
    "types": ["node", "socket.io-client"],
    "esModuleInterop": true,
    "inlineSourceMap": true,
    "experimentalDecorators": true,
    "newLine": "LF"
  },
  "exclude": ["node_modules"],
  "references": []
}
