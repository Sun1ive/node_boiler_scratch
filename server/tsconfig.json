{
  "compilerOptions": {
    "target": "es2017",
    "baseUrl": ".",
    "module": "commonjs",
    "lib": ["es5", "esnext", "dom"],
    "declaration": false,
    "rootDir": "src",
    "outDir": "distribution",
    "allowJs": true,
    "removeComments": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noImplicitReturns": true,
    "moduleResolution": "node",
    "types": ["express", "socket.io", "node"],
    "esModuleInterop": true,
    "inlineSourceMap": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "newLine": "LF",
    "paths": {
        "@shared/*": [ "../shared/lib/*" ]
    }
  },
  "references": [
    {
        "path": "../shared"
    }
  ]
}
